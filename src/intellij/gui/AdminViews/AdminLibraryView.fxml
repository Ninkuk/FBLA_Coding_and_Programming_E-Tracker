<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="adminDashCenter" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="220.0" minWidth="800.0"
            prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="intellij.gui.AdminViews.AdminLibraryController">
    <top>
        <Label fx:id="label" text="Library" textFill="#212121" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets left="40.0" top="25.0"/>
            </BorderPane.margin>
            <font>
                <Font name="Montserrat SemiBold" size="20.0"/>
            </font>
            <HBox.margin>
                <Insets left="40.0" top="25.0"/>
            </HBox.margin>
        </Label>
    </top>
    <center>
        <VBox BorderPane.alignment="TOP_LEFT">
            <children>
                <TableView fx:id="tableView" prefHeight="450.0">
                    <columns>
                        <TableColumn fx:id="redemption" prefWidth="100.0" text="Redemption Code"/>
                        <TableColumn fx:id="title" prefWidth="100.0" text="Title"/>
                        <TableColumn fx:id="author" prefWidth="100.0" text="Author"/>
                        <TableColumn fx:id="pagenum" prefWidth="100.0" text="Number of Pages"/>
                        <TableColumn fx:id="isbn" prefWidth="100.0" text="ISBN"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
                <HBox alignment="TOP_CENTER">
                    <children>
                        <JFXButton fx:id="displayAddFieldsButton" buttonType="RAISED" contentDisplay="CENTER"
                                   focusTraversable="false" onAction="#displayAddFields" prefWidth="100.0"
                                   style="-fx-background-color: #00bfa5;" text="Add" textFill="WHITE">
                            <font>
                                <Font name="Montserrat Medium" size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="25.0"/>
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="displayUpdateFieldsButton" buttonType="RAISED" contentDisplay="CENTER"
                                   focusTraversable="false" layoutX="110.0" layoutY="10.0"
                                   onAction="#displayUpdateFields" prefWidth="100.0"
                                   style="-fx-background-color: #FFC107;" text="Update" textFill="WHITE">
                            <font>
                                <Font name="Montserrat Medium" size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets right="25.0"/>
                            </HBox.margin>
                        </JFXButton>
                        <JFXButton fx:id="removeButton" buttonType="RAISED" contentDisplay="CENTER"
                                   focusTraversable="false" onAction="#removeBook" prefWidth="100.0"
                                   style="-fx-background-color: #f44336;" text="Remove" textFill="WHITE">
                            <font>
                                <Font name="Montserrat Medium" size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </HBox>
                <HBox fx:id="addInfoFields" alignment="TOP_CENTER" visible="false">
                    <children>
                        <JFXTextField fx:id="redemptionCodeInput" focusColor="#00bfa5" labelFloat="true"
                                      promptText="Redemption Code" unFocusColor="#949494">
                            <font>
                                <Font name="Montserrat Regular" size="12.0"/>
                            </font>
                        </JFXTextField>
                        <JFXTextField fx:id="titleInput" focusColor="#00bfa5" labelFloat="true" layoutX="30.0"
                                      layoutY="10.0" promptText="Title" unFocusColor="#949494">
                            <font>
                                <Font name="Montserrat Regular" size="12.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="authorInput" focusColor="#00bfa5" labelFloat="true" layoutX="174.0"
                                      layoutY="10.0" promptText="Author" unFocusColor="#949494">
                            <font>
                                <Font name="Montserrat Regular" size="12.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="pagesnumInput" focusColor="#00bfa5" labelFloat="true" layoutX="318.0"
                                      layoutY="10.0" promptText="Number of Pages" unFocusColor="#949494">
                            <font>
                                <Font name="Montserrat Regular" size="12.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </JFXTextField>
                        <JFXTextField fx:id="isbnInput" focusColor="#00bfa5" labelFloat="true" layoutX="318.0"
                                      layoutY="10.0" promptText="ISBN" unFocusColor="#949494">
                            <font>
                                <Font name="Montserrat Regular" size="12.0"/>
                            </font>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </JFXTextField>
                        <VBox>
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </VBox>
                        <JFXButton fx:id="addButton" buttonType="RAISED" contentDisplay="CENTER"
                                   focusTraversable="false" onAction="#addBook" prefWidth="100.0"
                                   style="-fx-background-color: #00bfa5;" text="Add" textFill="WHITE">
                            <font>
                                <Font name="Montserrat Medium" size="15.0"/>
                            </font>
                        </JFXButton>
                    </children>
                    <VBox.margin>
                        <Insets top="15.0"/>
                    </VBox.margin>
                </HBox>
                <VBox fx:id="updateInfoFields" alignment="CENTER" layoutX="10.0" layoutY="507.0" visible="false">
                    <HBox>
                        <children>
                            <JFXTextField fx:id="oldRedemptionCodeInput" focusColor="#00bfa5" labelFloat="true"
                                          layoutX="100.0" layoutY="10.0" promptText="Old Redemption Code"
                                          unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="newRedemptionCodeInput" focusColor="#00bfa5" labelFloat="true"
                                          layoutX="30.0" layoutY="10.0" promptText="New Redemption Code"
                                          unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="titleUpdateInput" focusColor="#00bfa5" labelFloat="true"
                                          promptText="New Title" unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="authorUpdateInput" focusColor="#00bfa5" labelFloat="true"
                                          layoutX="30.0" layoutY="10.0" promptText="New Author" unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="pagesnumUpdateInput" focusColor="#00bfa5" labelFloat="true"
                                          layoutX="174.0" layoutY="10.0" promptText="New # of Pages"
                                          unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <JFXTextField fx:id="isbnUpdateInput" focusColor="#00bfa5" labelFloat="true" layoutX="318.0"
                                          layoutY="10.0" promptText="New ISBN" unFocusColor="#949494">
                                <font>
                                    <Font name="Montserrat Regular" size="12.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </JFXTextField>
                            <VBox>
                                <HBox.margin>
                                    <Insets left="20.0"/>
                                </HBox.margin>
                            </VBox>
                        </children>
                    </HBox>
                    <JFXButton fx:id="updateButton" buttonType="RAISED" contentDisplay="CENTER" focusTraversable="false"
                               onAction="#updateBook" prefWidth="100.0" style="-fx-background-color: #FFC107;"
                               text="Update" textFill="WHITE">
                        <font>
                            <Font name="Montserrat Medium" size="15.0"/>
                        </font>
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </JFXButton>
                    <VBox.margin>
                        <Insets top="-29.0"/>
                    </VBox.margin>
                </VBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="messageLabel" alignment="CENTER" text="error" textFill="#f44336" visible="false">
                            <font>
                                <Font name="Montserrat Regular" size="10.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0"/>
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="20.0"/>
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
