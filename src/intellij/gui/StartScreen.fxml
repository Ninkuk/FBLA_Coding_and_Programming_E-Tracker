         </ImageView>
            <JFXButton fx:id="startButton" buttonType="RAISED" contentDisplay="CENTER" onAction="#buttonToLoginPage" prefHeight="55.0" prefWidth="223.0" ripplerFill="WHITE" style="-fx-background-color: #00bfa5;" text="Start" textAlignment="CENTER" textFill="WHITE">
